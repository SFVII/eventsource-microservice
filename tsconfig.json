{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "type"
    ],
    "baseUrl": "..",
    "paths": {
      "": [
        "node_modules/"
      ]
    }
  },
  "include": [
    "src/*/"
  ],
  "exclude": [
    "dist"
  ]
}
